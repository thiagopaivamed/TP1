<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarFilme</servlet-name>
        <servlet-class>Servlet.CadastrarFilme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormCompra</servlet-name>
        <servlet-class>Servlet.FormCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostraCompra</servlet-name>
        <servlet-class>Servlet.MostraCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categoria</servlet-name>
        <servlet-class>Servlet.Categoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Crawler</servlet-name>
        <servlet-class>Servlet.Crawler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Localizacao</servlet-name>
        <servlet-class>Servlet.Localizacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarFilme</servlet-name>
        <url-pattern>/CadastrarFilme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormCompra</servlet-name>
        <url-pattern>/FormCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostraCompra</servlet-name>
        <url-pattern>/MostraCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categoria</servlet-name>
        <url-pattern>/categoria/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Crawler</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Localizacao</servlet-name>
        <url-pattern>/localizacao/index</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
